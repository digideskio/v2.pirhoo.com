section.main__section.main__projects(screen-height="400", ng-if="projects")
  .main__section__panel(aria-section="Projects")
    h2 I <strong>love</strong> my job<br />

  .main__projects__cascading(projects)
    .main__projects__cascading__item(ng-repeat="project in projects")
      a(ng-href="{{ project.url }}")
        .main__projects__cascading__item__overlay(ng-style="{ background: project.color }")
        img.main__projects__cascading__item__thumbnail(ng-src="{{ project.thumbnail }}")
        .main__projects__cascading__item__title {{ project.title }}
